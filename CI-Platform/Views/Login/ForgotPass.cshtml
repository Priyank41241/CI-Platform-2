        <div class="col-lg-4 container loginForm d-flex">
            <div></div>
            <form asp-action="ForgotPassPost" method="post" class="mainForm d-flex">
                <div>
                    <p id="forgettxt">Forgot Password</p>
                </div>
                <div>
                    <p id="instructiontxt">
                        Enter your email address you've using for your account below and
                        we will send you a password reset link
                    </p>
                </div>
                <div>
                    <span>
                        @if (TempData["Exception"] != null)
                        {
                            @TempData["Exception"].ToString();
                        }
                    </span>
                </div>
                <div class="emailInput">
                    <div class="loginlabel">
                        <label for="forgetmail">Email Address</label>
                    </div>
                    <input class="form-control"
                           id="forgetmail"
                           placeholder="Email"
                           type="text" name="email_forgot" />
                </div>
                <div class="emailInput">
                    <input type="submit"
                           class="loginbtn form-control"
                           value="Reset my Password" />
                </div>
                <div class="loginpage">
                    <a asp-controller="Login" asp-action="LoginPage" class="loginlink">Login</a>
                </div>
            </form>
            <div class="text-center">
                <a href="#" id="privacytxt"> Privacy Policy</a>
            </div>
